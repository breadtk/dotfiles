# This file needs to be sorted from the most specific to least specific.
# If multiple values match, only the first match valued is used.

host example
  hostname ssh.example.com
  user alice
  IdentityFile ~/.ssh/id_dsa

host example2
  hostname ssh.example.org
  user bob
  IdentityFile ~/.ssh/id_rsa

host *
  # Revisit around ~2016
  Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr

  # This occurs after connection is established.
  Compression yes

  # Overwrites default timeout.
  ConnectTimeout 3

  # All SSH connections must be setup separately
  ControlMaster no
  ControlPath none

  # Obfuscate known_host file entries. This process can be reversed.
  HashKnownHosts yes

  # Mo' betta security.
  Protocol 2

  # Prevent disconnects
  TCPKeepAlive yes
  ServerAliveInterval 5
  ServerAliveCountMax 6
